{
  "name": "serverless-offline-schedule",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "test": "jest",
    "test:coveralls": "jest --coverage --runInBand && cat ./coverage/lcov.info | ./node_modules/.bin/coveralls && rm -rf ./coverage",
    "lint": "concurrently \"npm run prettier\" \"npm run eslint\"",
    "prettier": "prettier -l 'src/**/*'",
    "eslint": "eslint --max-warnings 0 --ext .ts 'src/**/*'",
    "dev:schedule": "ts-node scripts/schedule.ts"
  },
  "keywords": [
    "serverless",
    "serverless plugin",
    "aws lambda",
    "schedule"
  ],
  "dependencies": {
    "lodash.flatten": "^4.4.0",
    "node-schedule": "^1.3.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "@types/sinon": "^7.5.2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "concurrently": "^4.1.2",
    "coveralls": "^3.1.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^1.11.1",
    "sinon": "^7.5.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
